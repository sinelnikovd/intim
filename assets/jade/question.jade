extends ./template/template.jade

block title
	title Задать вопрос

block content
	include ./template/header.jade
	.container
		- var backtext = "Задать вопрос";
		include ./template/back.jade
		// BEGIN FORM 
		form(action="/").form
			.form__line
				label(for="name").label Имя
				input(type="text")#name.input
			.form__line
				label(for="tel").label Номер телефона
				input(type="tel")#tel.input.data-inputmask
			.form__line
				label(for="email").label Электронная почта
				input(type="email")#email.input
			.form__line
				label(for="msg").label Вопрос
				textarea(name="" rows="6")#msg.textarea
			.form__line
				.btn-container
					button(type="submit").btn.btn_red Отправить
		// END FORM 

	include ./template/full-site.jade
	include ./template/footer.jade