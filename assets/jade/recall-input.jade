extends ./template/template.jade

block title
	title Ваш отзыв

block content
	include ./template/header.jade
	.container
		- var backtext = "Ваш отзыв";
		include ./template/back.jade
		// BEGIN FORM 
		form(action="/").form
			.form__line
				label(for="name").label Имя
				input(type="text")#name.input
			.form__line
				label(for="email").label E-mail
				input(type="email")#email.input
			.form__line
				label(for="true").label Достоинства
				textarea(name="" rows="4")#true.textarea
			.form__line
				label(for="false").label Недостатки
				textarea(name="" rows="4")#false.textarea
			.form__line
				label(for="msg").label Комментарий
				textarea(name="" rows="4")#msg.textarea
			.form__line
				.evaluation
					.evaluation__text Оцените пожалуйста <br>по пятибальной шкале
					.evaluation__stars
						fieldset
							input(type="radio" name="rating" value="5")#star5
							label(for="star5" title="Outstanding") 5 stars
							input(type="radio" name="rating" value="4")#star4
							label(for="star4" title="Very Good") 4 stars
							input(type="radio" name="rating" value="3")#star3
							label(for="star3" title="Good") 3 stars
							input(type="radio" name="rating" value="2")#star2
							label(for="star2" title="Poor") 2 stars
							input(type="radio" name="rating" value="1")#star1
							label(for="star1" title="Very Poor") 1 star
			.form__line
				.btn-container
					button(type="submit").btn.btn_100.btn_red Отправить отзыв
		// END FORM 

	include ./template/full-site.jade
	include ./template/footer.jade